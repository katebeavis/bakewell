section.container
  h1 Recipes

  = link_to 'Add new recipe', new_recipe_path, class: 'add-button btn btn-primary'

  table.table.table-striped.table-bordered.table-hover
    tr
      th Name
      th Description
      th Last updated
    - @recipes.each do |recipe|
      tr
        td = link_to recipe.name, recipe_path(recipe.id)
        td = recipe.description
        td = recipe.created_at.strftime("%A #{recipe.created_at.day.ordinalize} %B %Y")
        td = link_to 'delete', recipe_path(recipe.id), data: { confirm: 'Are you sure?' }, method: :delete
